<%= form_for ([@user, @user.references.build]) do |f| %>
	<!-- Rating: (Good or Bad, 1 is bad, 2 is good) --><%#= f.select :rating, options_for_select(%w[1 2]) %>
	<br>
	<%= f.text_area :description, placeholder: "Add a reference for this user, be nice!" %><br>
	<%= f.submit 'Save Reference' %>
<% end %>