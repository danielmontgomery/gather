<head>
	<script type="text/javascript">
	//cycle through markers:
      function initialize() {
      	var i = 0;
		// for(i = 0; i < @trips.length; i++) {
		// 	var data = @trips[i];
		// 	var myLatLng = new google.maps.latLng(data.latitude, data.longitude);
		// 	var title = data.title;
		// };
		var markers = [
			<% if @trips.length != 0 %>
				<% for i in 0...@trips.length do %>
				{
					lat: <%= @trips[i].latitude %>,
					lng: <%= @trips[i].longitude %>,
					name: "<%= @trips[i].title %>"
				},
				<% end %>
				
			<% else %>
				{
					lat: 34.0337,
					lng: -118.754,
					name: "Smog City!"
				},
			<% end %>
			];
		var first = markers[0];
		var myLatLng = new google.maps.LatLng(first.lat, first.lng);
        var mapOptions = {
          zoom: 8,
          center: myLatLng
        };
        var map = new google.maps.Map(document.getElementById('map-canvas'),
            mapOptions);
        for (i = 0; i < markers.length; i++) {
        	var data = markers[i];
        	var myLatLng = new google.maps.LatLng(data.lat, data.lng);
        	var marker = new google.maps.Marker({
        		position: myLatLng,
        		map: map,
        		title: data.title
        	});
        	google.maps.event.addListener(marker, 'click', function(marker, name) {
        		return function() {
        			infowindow.setContent(name);
        			infowindow.open(map,marker);
        		};
        	}(marker, data.name));
        }
      }//end marker loop
      console.log("map loaded");
      google.maps.event.addDomListener(window, 'load', initialize);
 
   	</script>
</head>
<div class="container">
	<h1>Search for trips</h1>
	<br>
	<% if current_user != nil %>
		<p><%= link_to 'Make a new trip', new_trip_path %> or search for one below:</p>
	<% else %>
		<p> You must be logged in to create or join a trip! <%= link_to "Sign up", new_user_registration_path, :class => "link_inline" %> or <%= link_to "Login", new_user_session_path, :class => "link_inline" %> today! </p>
	<% end %>
	<br>

	<%= form_tag trips_path, :method => :get do %>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search Near", :name => nil %>
	<% end %>
	<br>
	<% if @trips.length != 0 %>
		<h3>Here are the closest trips happening soon near <%= @placeName %>!</h3><br>
		<div id="map-canvas"></div>
	<% else %>
		<h3>Unfortunately there are no trips in your area. Start one!</h3>
	<% end %>
	<% @trips.each do |t| %>
		<div class="result">
			<div class="left-col">
				<div class="price">
					<div class="priceTop">
						<h1><span class="dollar">$</span><%= t.price %></h1>
					</div>
					<div class="priceBottom">
						<p>Expected</p>
					</div>
				</div>
			</div>
			<div class="mid-col">
				<b><span class="tripTitle"><%= link_to t.title, t %></span></b><br>
				Organized by <%= link_to t.organizer.first_name, t %> <%= link_to t.organizer.last_name, t %><br>
				Participants: 	<% t.users.each do |u| %>
									<%= u.nickname %>,
								<% end %>
			</div>
			<div class="right-col">
				<p><%= link_to "Learn", t %><br>
				<%= link_to "More", t %></p>
			</div>
		</div>	
	<% end %>
</div>


