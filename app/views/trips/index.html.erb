<div class="container">
	<h1>Trips Index</h1>
	<h2>Here should be your trip search page. </h2>
	<!-- Displays if there's a current user logged in: -->
	<% if current_user != nil %>
		<p>Hi, <%= current_user.email %>, here are all the trips you've made:</p>
		<% @allTrips.each do |t| %>
			Trip #<%= t.id %><br>
			Title:<%= t.title %><br>
			Organizer:<%= t.organizer_id %><br><br>
		<% end %>
		<%= link_to 'Make a new trip!', new_trip_path %> <br>
		<% else %>

		<p> TEXT FOR LOGGED OUT USER </p>
	<% end %>
</div>