<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>
<div class="field">
    <%= f.label :education %><br />
    <%= f.text_field :education, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :about %><br />
    <%= f.text_area :about, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :occupation %><br />
    <%= f.text_field :occupation, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :hometown %><br />
    <%= f.text_field :hometown, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :interests %><br />
    <%= f.text_area :interests, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :past_homes %><br />
    <%= f.text_field :past_homes, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :past_travels %><br />
    <%= f.text_area :past_travels, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :future_travels %><br />
    <%= f.text_area :future_travels, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :travel_style %><br />
    <%= f.text_area :travel_style, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :currently_traveling %><br />
    <%= f.check_box :currently_traveling, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age, autofocus: true %>
  </div>
  <div class="field">
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
